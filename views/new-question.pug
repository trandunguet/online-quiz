extends layout

block content
  .jumbotron.jumbotron-fluid
    .container
      h1 Create new question

  .container
    form(action='/new-question', method='post')
      .form-group
        label(for='stem') Question:
        input#stem.form-control(type='text', name='stem' required)
      .form-group
        label(for='key') Key:
        input#key.form-control(type='text', name='key' required)
      button.btn.btn-primary(type='submit') Create
